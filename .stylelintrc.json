{
  "extends": ["stylelint-config-standard-scss"],
  "rules": {
    "font-family-no-missing-generic-family-keyword": [
      true,
      {
        "ignoreFontFamilies": ["SofiaPro", "Fractul"]
      }
    ],
    "selector-class-pattern": null,
    "indentation": 2,
    "color-function-notation": "legacy",
    "value-no-vendor-prefix": [
      true,
      {
        "ignoreValues": ["box"]
      }
    ]
  }
}
